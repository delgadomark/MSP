  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django Runserver",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main/manage.py",
      "args": ["runserver", "8080"],
      "django": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/dockerfiles/site.env"
    },
    {
      "name": "Django Shell",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main/manage.py",
      "args": ["shell"],
      "django": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/dockerfiles/site.env"
    },
    {
      "name": "Generate Test Coverage",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["main", "--cov", "--cov-report", "xml:cov.xml", "--cov-branch"],
      "django": true,
      "justMyCode": false,
      "env": { "TESTING_ENVIRONMENT": "true" }
    }
  ]
}
