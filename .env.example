# Example .env file for Microsoft Email Configuration
# Copy this file to .env in your project root and update with your details

# Microsoft Email Settings
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Replace these with your actual Microsoft email credentials
EMAIL_HOST_USER=your-email@outlook.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your-email@outlook.com

# Optional: Django Debug Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database (if using PostgreSQL in production)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname
